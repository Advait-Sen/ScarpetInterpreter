<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="adsen.scarpet.interpreter.ScarpetApplicationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Welcome to Scarpet Application!"/>
    <TextArea fx:id="scriptInputArea"/>
    <Button text="Input script" onAction="#onScriptInput"/>
    <TextArea fx:id="scriptOutputArea" editable="false"/>
</VBox>
